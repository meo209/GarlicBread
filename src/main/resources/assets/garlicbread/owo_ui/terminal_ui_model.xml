<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children> <!---->
                <flow-layout direction="vertical"> <!---->
                    <children>
                        <text-area id="history">
                            <sizing>
                                <horizontal method="fixed">300</horizontal>
                                <vertical method="fixed">150</vertical>
                            </sizing>
                        </text-area>
                        <flow-layout direction="horizontal">
                            <children>
                                <text-box id="input">
                                    <sizing>
                                        <horizontal method="fixed">270</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </text-box>
                                <button id="run-button">
                                    <text>Run</text>
                                    <margins>
                                        <left>5</left>
                                    </margins>
                                </button>
                            </children>
                            <margins>
                                <top>5</top>
                            </margins>
                        </flow-layout>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>
                    <margins>
                        <all>10</all>
                    </margins>

                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <!---->
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
